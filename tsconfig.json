{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "preserveWatchOutput": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
